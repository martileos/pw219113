<form action="/update/<%= data.id %>" method="post">
	<table border align="center">
		<tr>
			<td>Nombre</td>
			<td><input type="text" value="<%= data.name %>" name="name" placeholder="Nombre"></td>
		</tr>
		<tr>
			<td>Dirección</td>
			<td><input type="text" value="<%= data.address %>" name="address" placeholder="Dirección"></td>
		</tr>
		<tr>
			<td>Teléfono</td>
			<td><input type="text" value="<%= data.phone %>" name="phone" placeholder="Teléfono"></td>
		</tr>
		<tr>
			<td colspan="2"><button type="submit">Guarda cliente</button></td>
		</tr>
	</table>
</form>